import sys
from threedhst import utils

def main():
    """
main()
"""
    if len(sys.argv) == 1:
        print """
Usage: asn_file_info xxx_asn.fits

"""
        sys.exit(1)
    else:
        NFILES=len(sys.argv)-1
        for i in range(NFILES):
            utils.asn_region(sys.argv[i+1])
##### main

if __name__ == "__main__":
    main()
